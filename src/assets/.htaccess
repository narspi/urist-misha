# –í–∫–ª—é—á–∞–µ–º mod_rewrite
<IfModule mod_rewrite.c>
    RewriteEngine On

    # --- üîí –ó–∞–ø—Ä–µ—â–∞–µ–º –ø—Ä—è–º–æ–π –¥–æ—Å—Ç—É–ø –∫ api.php –∏ config.php ---
    RewriteRule ^(api\.php|config\.php)$ - [F,L]

    # --- (–æ–ø—Ü–∏–æ–Ω–∞–ª—å–Ω–æ) –†–∞–∑—Ä–µ—à–∞–µ–º –≤—Å—ë –æ—Å—Ç–∞–ª—å–Ω–æ–µ ---
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
</IfModule>

# --- –ê–ª—å—Ç–µ—Ä–Ω–∞—Ç–∏–≤–Ω–∞—è –∑–∞—â–∏—Ç–∞ (–Ω–∞ —Å–ª—É—á–∞–π, –µ—Å–ª–∏ mod_rewrite –æ—Ç–∫–ª—é—á–µ–Ω) ---
<FilesMatch "^(api\.php|config\.php)$">
    Require all denied
</FilesMatch>
